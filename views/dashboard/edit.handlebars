<section class="section-form">
        <h2 class="title_align_center">Editar Transação</h2>
    <div class="section-form__div">

        <form action="/transactions/edit/{{data.id}}" method="post" class="form">
            <div class="form-control form-control-radio">
                {{#if transaction_type}}
                <input type="radio" name="transaction_type" value="income" id="income" checked>
                <label class="form-control__label" for="income">Receita</label>

                <input type="radio" name="transaction_type" value="expense" id="expense">
                <label class="form-control__label" for="expense">Despesa</label>

                {{else}}

                <input type="radio" name="transaction_type" value="income" id="income">
                <label class="form-control__label" for="income">Receita</label>

                <input type="radio" name="transaction_type" value="expense" id="expense" checked>
                <label class="form-control__label" for="expense">Despesa</label>
                {{/if}}
            </div>

            <div class="form-control">
                <label class="form-control__label" for="description">Descrição:</label>
                <input class="form-control__input" type="text" name="description" id="description" data-max-length="20"
                    value={{data.description}}>
            </div>

            <div class="form-control">
                <label class="form-control__label" for="amount">Valor:</label>
                <input class="form-control__input" type="text" name="amount" id="amount" data-required
                    data-max-length="20" value={{data.amount}}>
            </div>

            <button class="form__btn button" type="submit">Alterar</button>
        </form>
    </div>
</section>